NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/polymarket_nba
CORS_ORIGIN=http://localhost:3001
# Swagger docs at /docs (default: enabled in non-prod, disabled in prod)
SWAGGER_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
NBA_SERVICE_BASE=http://localhost:8000
NBA_SCOREBOARD_CRON=*/10 * * * *
NBA_FINAL_RESULTS_CRON=*/10 * * * *
NBA_FINAL_LOOKBACK_DAYS=2
NBA_SCOREBOARD_DATE=
NBA_FINAL_RESULTS_DATE=
NBA_PLAYER_INFO_LIMIT=0
NBA_PLAYERS_CURRENT_ONLY=false
NBA_HOURLY_ENABLED=false
NBA_HOURLY_CRON=0 * * * *
NBA_HOURLY_DATE=
NBA_UPCOMING_SCHEDULE_ENABLED=true
# Run once per hour; defaults to future 7 days (tomorrow..+6 days) unless NBA_UPCOMING_SCHEDULE_DATE is set.
NBA_UPCOMING_SCHEDULE_CRON=0 * * * *
NBA_UPCOMING_SCHEDULE_DATE=
NBA_UPCOMING_SCHEDULE_DAYS=6
NBA_STALE_SCHEDULED_ENABLED=true
NBA_STALE_SCHEDULED_CRON=0 */6 * * *
NBA_STALE_SCHEDULED_LOOKBACK_HOURS=24
NBA_STALE_SCHEDULED_MAX_GAMES=200
NBA_STALE_SCHEDULED_MAX_DATES=14
NBA_SYNC_RANGE_MAX_DAYS=31
SEASON_START_UTC_2025=2025-10-01T00:00:00Z
# Interpret all YYYY-MM-DD inputs as "game dates" in this time zone (default: America/New_York).
NBA_DATE_INPUT_TZ=America/New_York

# A2A agent card (optional; defaults are derived from request host)
A2A_PUBLIC_BASE=
A2A_AGENT_ID=hoobs-sports-agent
A2A_AGENT_NAME=Hoobs Sports Agent
A2A_AGENT_VERSION=1.0.0
A2A_AGENT_DESCRIPTION=An agent that provides NBA matchup analysis, Polymarket market data, and simple edge computations.
A2A_MATCHUP_FULL_PRICE_USD=0.001

# MCP server metadata (optional)
MCP_SERVER_NAME=hoobs-mcp
MCP_SERVER_VERSION=1.0.0
MCP_PROTOCOL_VERSION=2026-02-10

# x402 pricing overrides for A2A paid tasks (optional)
X402_A2A_PRICE=$0.001
X402_A2A_DESCRIPTION=A2A paid task access
